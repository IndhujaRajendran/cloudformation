{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "ECSCluster": {
            "Type": "AWS::ECS::Cluster"
        }
    },
    {
    "Type": "AWS::IAM::Policy",
    "Properties": {
        "PolicyName": "AWSCloudFormationFullAccess",
        "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Action": [
                        "cloudformation:Describe*",
                        "cloudformation:List*",
                        "cloudformation:Get*"
                    ],
                    "Resource": "*"
                }
            ]
        },
    "Outputs": {
        "Cluster": {
            "Value": {
                "Ref": "ECSCluster"
            },
            
        }
    }
}
